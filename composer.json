{
  "name": "phramework/testphase",
  "description": "API response testing tool for Phramework",
  "homepage": "https://nohponex.gr",
  "authors": [{
    "name": "Xenophon Spafaridis",
    "email": "nohponex@gmail.com",
    "homepage": "https://nohponex.gr"
  }],
  "repositories": [{
    "type": "vcs",
    "url": "git@gitlab.mathlogic.eu:Phramework/Phramework.git"
  }, {
    "type": "vcs",
    "url": "git@github.com:metaphrase/php-sdk.git"
  }],
  "require": {
    "php": ">=5.6",
    "phramework/phramework": "1.0.0-alpha.20",
    "ext-curl": "*",
    "ext-json": "*",
    "corneltek/getoptionkit": "~2"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "*",
    "apigen/apigen": "^4.1",
    "phpunit/phpunit": "5.*"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Phramework\\Testphase\\": "src"
    }
  },
  "autoload-dev": {},
  "archive": {
    "exclude": [
      "*",
      ".*",
      "!/src/*"
    ]
  },
  "scripts": {
    "test": [
      "echo \"$(tput setaf 1)testphase test routine$(tput sgr 0)\"",
      "find src/ -name '*.php' -print0 | xargs -0 -L 1 php -l",
      "find bin/ -name '*.php' -print0 | xargs -0 -L 1 php -l",
      "find tests/ -name '*.php' -print0 | xargs -0 -L 1 php -l",
      "find Examples/ -name '*.php' -print0 | xargs -0 -L 1 php -l",
      "phpunit"
    ],
    "lint": "./vendor/bin/phpcs -p -s --standard=PSR2 ./src ./Examples ./tests ./bin",
    "doc": [
      "./vendor/bin/apigen generate -s ./src -d ./doc --template-theme bootstrap --todo --tree --deprecated --no-source-code --title \"phramework/testphase\""
    ],
    "run": "php ./bin/testphase -d ./Examples/JSON -b ./Examples/JSON/bootstrap.php"
  },
  "bin": [
    "bin/testphase"
  ]
}
